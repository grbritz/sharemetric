{  
	"name"				: "ShareMetric",
 	"version"			: "2.0.2",
 	"manifest_version"  : 2,
	"homepage_url"		: "http://contentharmony.com/tools/sharemetric/",
 	"description"		: "Social, link, and keyword data for your current browser URL",
	"options_page"		: "/views/options.html",
	"icons"				: { 
			"16": "/images/icons/sharemetric-16.png",
          	"48": "/images/icons/sharemetric-48.png",
         	"128": "/images/icons/sharemetric-128.png" 
		},
	"browser_action"	: {     
 			"default_icon"	: "/images/icons/sharemetric-16.png",
 			"default_popup" : "/views/popup.html",
			"default_title" : ""
 		},
	"background"		: {
			"scripts": ["/lib/js/jquery-2.1.0.min.js", "/lib/js/hmac-sha1.js", "/lib/js/enc-base64-min.js", "/lib/js/purl.js", "/lib/js/knockout-3.2.0.js", "js/util.js", "js/apis.js", "/js/background.js"]
		},
	"permissions"		: [
		"http://*/*", "https://*/*", "tabs", "storage"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com;  object-src 'self'"
 }