{  
	"name"				: "ShareMetric",
 	"version"			: "1.2",
 	"manifest_version"  : 2,
	"homepage_url"		: "http://contentharmony.com/tools/sharemetric/",
 	"description"		: "Social share counts for your current browser URL",
	"options_page"		: "options.html",
	"icons"				: { 
			"16": "images/icons/sharemetric-16.png",
          	"48": "images/icons/sharemetric-48.png",
         	"128": "images/icons/sharemetric-128.png" 
		},
	"browser_action"	: {     
 			"default_icon"	: "images/icons/sharemetric-16.png",
 			"default_popup" : "popup.html",
			"default_title" : ""
 		},
	"background"		: {
			"scripts": ["background.js", "jquery-1.8.3.js"]
		},
	"permissions"		: [
		"http://*/*", "https://*/*", "tabs", "storage"
	],
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
 } 
 
